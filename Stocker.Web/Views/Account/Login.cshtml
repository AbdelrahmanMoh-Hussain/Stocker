@model UserLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log In</title>
    <link href="~/css/loginandregistersytle.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <h3 class="title">Please Login</h3>
        <form asp-action="Login" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-floating mb-4">
                <label asp-for="Email"></label>
                <input class="form-control rounded-8" asp-for="Email" placeholder="abc@mymail.com" />

                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-floating mb-4">
                <label asp-for="Password"></label>
                <input class="form-control rounded-8" asp-for="Password" placeholder="" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="w-100">
                <button class="w-100 btn btn-success d-block rounded-8 mb-2" type="submit">Log In</button>
                <span>Don't have an account! <a asp-action="Register" >Create account</a></span>
            </div>
        </form>
    </div>
</body>
</html>